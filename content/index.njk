        <div id="sponsor-logos">
            <a class="sponsor-gold" href="https://www.cl.nttdata.com/"><img id="logo-ntt-data" src="/static/img/sponsors/ntt-data.png"/></a>
            <a href="https://www.tcs.com/"><img id="logo-tcs" src="/static/img/sponsors/tcs.png"/></a>
            <a href="https://www.nic.cl/"><img id="logo-nic" src="/static/img/sponsors/nic-chile.png"/></a>
            <a href="https://www.synopsys.com/"><img id="logo-synopsys" src="/static/img/sponsors/synopsys.svg"/></a>
            <a href="https://www.cero.ai/"><img id="logo-cero" src="/static/img/sponsors/cero.svg"/></a>
        </div>
    </div>
{% endblock %}
